<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovelActivity">

    <FrameLayout
        android:id="@+id/background_top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/back_ground_novel_top"></FrameLayout>


    <ImageView
        android:id="@+id/imgNovel"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:src="@drawable/endgame" />

    <TextView
        android:id="@+id/txtNovelName"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgNovel"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:text="END GAME" />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNovelName"
        android:layout_alignTop="@+id/txtNovelName"
        android:layout_marginTop="50dp"
        android:text="Author Name"
        android:textColor="#ffffff" />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imgNovel"
        android:layout_marginTop="305dp"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-medium"
            android:text="Description goes here. If the text is too long ..."
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:textColor="#BD3434"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:text="4" />

            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="59dp"
                android:layout_marginBottom="0dp"
                android:text="RATING" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="75dp"
                android:text="5-16"
                android:textColor="#BD3434"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="85dp"
                android:text="DATE" />
        </RelativeLayout>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            android:text="Chapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lvChapter"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</RelativeLayout>